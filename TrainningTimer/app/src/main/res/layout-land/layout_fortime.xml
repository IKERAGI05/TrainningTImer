<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <ProgressBar
        android:id="@+id/progressBar_fortime"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="376dp"
        android:layout_height="386dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/circulo_2_fortime"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circulo_1_fortime"
        android:rotation="-90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teview_tiempo"
        android:layout_width="244dp"

        android:layout_height="143dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="132dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="96sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teView_timeCap"
        android:layout_width="149dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="536dp"
        android:text="@string/textview2_p_amrap"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ft_PlayStop"
        android:layout_width="128dp"
        android:layout_height="95dp"
        android:layout_marginStart="584dp"
        android:layout_marginTop="196dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/button_stop_play_amrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ft_restart"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="204dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:src="@drawable/ic_restart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <Button
        android:id="@+id/ft_b_set"
        android:layout_width="63dp"
        android:layout_height="37dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="552dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="SET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />
    <TextView
        android:id="@+id/ft_tv_mins"
        android:layout_width="45dp"
        android:layout_height="16dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="560dp"
        android:text="mins"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/et_fortime"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="536dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>